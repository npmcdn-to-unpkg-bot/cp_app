        .section-row.no-padding-top.half-padding-bottom
            .container
                .row
                    .col-md-12(data-animation-name="fadeInRightBig")
                        .owl-carousel.items-carousel(data-auto-height="true")
                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post1.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post2.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post3.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post4.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post5.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post6.htm')

    .section-overlay