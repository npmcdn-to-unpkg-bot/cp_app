include ./../../layouts/mixin.jade
section.section(data-background="demo/parallax/2.jpg", data-background-xs="demo/parallax/2-xs.jpg", data-background-md="demo/parallax/2-md.jpg", data-background-lg="demo/parallax/2-lg.jpg")
    .section-row-container
        .section-row.th-dark.no-padding-bottom.bg-transparent
            .container
                .row
                    .col-md-12
                        h3.section-subtitle.text-center
                            +content('home_blog/blogtitle.htm')

        .section-row.no-padding-top.half-padding-bottom
            .container
                .row
                    .col-md-12(data-animation-name="fadeInRightBig")
                        .owl-carousel.items-carousel(data-auto-height="true")
                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post1.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post2.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post3.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post4.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post5.htm')

                            .carousel-item
                                .recent-post.post-standard
                                    +content('home_blog/post6.htm')

    .section-overlay