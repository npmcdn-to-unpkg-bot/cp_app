include ./../../layouts/mixin.jade
section.section(data-background="{{ '/themes/atemporale/assets/images/home/2-a.jpg'|app}}", data-background-xs="{{ '/themes/atemporale/assets/images/home/2-xs.jpg'|app}}", data-background-md="{{ '/themes/atemporale/assets/images/home/2-md.jpg'|app}}", data-background-lg="{{ '/themes/atemporale/assets/images/home/2-lg.jpg'|app}}")
    .section-row-container
        .section-row.th-dark.no-padding-bottom.bg-transparent
            .container
                .row
                    .col-md-12
                        h3.section-subtitle.text-center
